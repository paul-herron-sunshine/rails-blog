<header>
  <div>
    <%= link_to "Blog", '#' %>
    <nav>
      <ul>
        <li><%= link_to "Home",   posts_path %></li>
        <li><%= link_to "About",   about_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", '#' %></li>
          <li><%= link_to "Profile", current_user %></li>
          <li><%= link_to "Settings", '#' %></li>
          <li><%= link_to "Log Out", logout_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Log In", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
